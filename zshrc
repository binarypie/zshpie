# Path to your zshpie configuration.
export ZSH=$HOME/Projects/zshpie

# Set to the name theme to load.
export ZSH_THEME="binarypie"

# Set to this to use case-sensitive completion
export CASE_SENSITIVE="true"

# Load all of the config files in ZshPie that end in .zsh
for config_file ($ZSH/zsh/*.zsh) source $config_file

# UTF-8
export LC_CTYPE=en_US.UTF-8

# Text Editor
export EDITOR="/usr/bin/mvim"

# Git
export PATH=/usr/local/git/bin:$PATH
export MANPATH=/usr/local/git/man:$MANPATH

# Go
export GOROOT=/Users/binarypie/Code/golang/go
export GOARCH=amd64
export GOOS=darwin
export GOBIN=/Users/binarypie/Code/golang/go/bin
export PATH=$PATH:$GOBIN

# Virtual Machines
alias vm_snowshares_start='/Library/Application\ Support/VMware\ Fusion/vmrun -T fusion start /Users/binarypie/Virtual\ Machines/snowshares.vmwarevm/snowshares.vmx nogui'
alias vm_snowshares_stop='/Library/Application\ Support/VMware\ Fusion/vmrun -T fusion stop /Users/binarypie/Virtual\ Machines/snowshares.vmwarevm/snowshares.vmx nogui'

